{
  "name": "@jsonql/utils",
  "version": "0.9.0",
  "description": "@jsonql/utils utilities library for general purpose",
  "main": "dist/index.js",
  "module": "jsonql-utils.esm.js",
  "browser": "jsonql-utils.min.js",
  "files": [
    "dist",
    "src",
    "jsonql-utils.esm.js",
    "jsonql-utils.esm.js.map",
    "jsonql-utils.min.js",
    "jsonql-utils.min.js.map",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:full": "nyc ava",
    "test": "pnpm build:tsc && pnpm test:full",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "ts:check": "tsc -noEmit",
    "ts": "node -r esbuild-register",
    "build:browser": "esbuild ./src/index.ts --bundle --minify --sourcemap --outfile=./jsonql-utils.min.js",
    "build:esm": "esbuild ./src/index.ts --format=esm --bundle --minify --sourcemap --outfile=./jsonql-utils.esm.js",
    "prepare:types": "cp ./src/types.d.ts ./dist/types.d.ts && cp ./src/types.d.ts ./index.d.ts",
    "update:version": "node ../../update-deps.js utils",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm build:browser && pnpm build:esm && pnpm prepare:types",
    "prepublishOnly": "pnpm build && pnpm test:full",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/koa": "^2.13.4",
    "@types/lodash": "^4.14.182",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.43",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "ava": "^4.3.0",
    "esbuild": "^0.14.43",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
