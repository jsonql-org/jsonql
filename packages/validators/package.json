{
  "name": "@jsonql/validators",
  "version": "0.7.1",
  "description": "@velocejs/validators based off @jsonql/validator and @jsonql/validator-core",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:plugin": "esbuild",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "update:version": "node ../../update-deps.js validators",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm build && pnpm test:nyc",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "dependencies": {
    "@jsonql/errors": "workspace:^0.8.0",
    "@jsonql/utils": "workspace:^0.7.5",
    "@jsonql/validator": "workspace:^0.8.5",
    "@jsonql/validator-core": "workspace:^0.10.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@jsonql/ast": "workspace:^0.8.6",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "node-fetch": "^3.2.5",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
