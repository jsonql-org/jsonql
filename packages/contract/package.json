{
  "name": "@jsonql/contract",
  "version": "0.10.1",
  "description": "@jsonql/contract for reading/writing contract for jsonql system",
  "main": "dist/index.js",
  "module": "src/index.d.ts",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test": "pnpm build && nyc ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:plugin": "esbuild ./tests/fixtures/plugins/year-compare.ts --outfile=./tests/fixtures/plugins/year-compare.js --format=cjs",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "update:version": "node ../../update-deps.js contract",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm test",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "dependencies": {
    "@jsonql/ast": "workspace:^0.8.6",
    "@jsonql/errors": "workspace:^0.8.0",
    "@jsonql/utils": "workspace:^0.7.6",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.40",
    "@jsonql/validators": "workspace:^0.8.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
