{
  "name": "@jsonql/errors",
  "version": "0.4.0",
  "description": "Jsonql Errors class",
  "main": "dist/index.js",
  "module": "./src/index",
  "files": [
    "dist",
    "src",
    "index.js"
  ],
  "scripts": {
    "test:ava": "ava",
    "test": "nyc ava",
    "build:ts": "tsc",
    "build:browser": "esbuild ./src/index.ts --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --log-limit=0 --outfile=./browser.js",
    "build": "pnpm build:ts && pnpm build:browser",
    "updateDeps": "node ../../update-deps.js errors",
    "prepublishOnly": "pnpm build && pnpm test",
    "postpublish": "pnpm updateDeps",
    "ts": "node -r esbuild-register",
    "build:swc": "swc ./src -d ./js"
  },
  "keywords": [
    "node.js",
    "jsonql",
    "errors"
  ],
  "author": "Joel Chu <joelchu@foxmail.com>",
  "homepage": "https://jsonql.org",
  "license": "MIT",
  "dependencies": {
    "@jsonql/constants": "workspace:^0.3.0"
  },
  "ava": {
    "ignoredByWatcher": [
      "tests/helpers/*.*",
      "tests/fixtures/*.*"
    ],
    "extension": [
      "ts"
    ],
    "cache": true,
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "verbose": true,
    "require": [
      "esbuild-register"
    ]
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "superkoa": "^1.0.3"
  }
}
