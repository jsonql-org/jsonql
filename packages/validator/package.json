{
  "name": "@jsonql/validator",
  "version": "0.8.6",
  "description": "@jsonql/validator general purpose validation library that test type and value with a plugin system",
  "main": "dist/index.js",
  "module": "dist/index.d.ts",
  "browser": "./jsonql-validator.min.js",
  "files": [
    "dist",
    "src",
    "jsonql-validator.min.js",
    "jsonql-validator.min.js.map",
    "index.d.ts",
    "base.js"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:nyc",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:base": "tsc ./base.ts",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "update:version": "node ../../update-deps.js validator",
    "clean:dist": "rimraf ./dist",
    "build:browser": "esbuild ./src/validator-factory.ts --bundle --minify --sourcemap --outfile=./jsonql-validator.min.js",
    "build:browser:test": "esbuild ./src/validator-factory.ts --bundle --outfile=./jsonql-validator.test.js",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm build && pnpm build:browser && pnpm test:nyc",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@jsonql/ast": "workspace:^0.8.6",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  },
  "dependencies": {
    "@jsonql/errors": "workspace:^0.8.0",
    "@jsonql/utils": "workspace:^0.7.6",
    "@jsonql/validator-core": "workspace:^0.10.1",
    "debug": "^4.3.4"
  }
}
