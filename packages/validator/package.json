{
  "name": "@jsonql/validator",
  "version": "0.4.0",
  "description": "jsonql/validator generated by create-plop",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "browser": "./jsonql-validator.min.js",
  "files": [
    "dist",
    "src",
    "jsonql-validator.min.js",
    "jsonql-validator.min.js.map",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:nyc",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "update:version": "node ../../update-deps.js validator",
    "clean:dist": "rimraf ./dist",
    "build:browser": "esbuild ./src/index.ts --bundle --minify --sourcemap --outfile=./jsonql-validator.min.js",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm build && pnpm build:browser && pnpm test:nyc",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "ava": "^4.1.0",
    "esbuild": "^0.14.30",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.12.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  },
  "dependencies": {
    "@jsonql/ast": "workspace:^0.7.2",
    "@jsonql/constants": "workspace:^0.6.1",
    "@jsonql/errors": "workspace:^0.6.0",
    "@jsonql/utils": "workspace:^0.6.5",
    "@jsonql/validator-core": "workspace:^0.7.0",
    "debug": "^4.3.4",
    "reflect-metadata": "^0.1.13"
  }
}
