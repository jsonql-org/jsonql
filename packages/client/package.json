{
  "name": "@jsonql/client",
  "version": "0.0.0",
  "description": "@jsonql/client generated by create-plop",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "typings": "src/types.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test:ava": "ava",
    "test": "pnpm build && nyc ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "prepare:types": "cp ./src/types.d.ts ./dist/types.d.ts",
    "update:version": "node ../../update-deps.js client",
    "make:module": "node ../../make-module.js client @jsonql/client/src/types.d.ts @jsonql/client",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm test",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "to1source <to1source@foxmail.com>",
  "license": "MIT",
  "homepage": "https://jsonql.org",
  "dependencies": {

  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
